@model IEnumerable<ProyectoDS1.Models.Ticket>

@{
    ViewData["Title"] = "Gestión de Tickets";
}

<div class="card shadow-sm">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-ticket-perforated-fill"></i> Gestión de Tickets
        </h5>
        <a asp-action="Create" class="btn btn-light btn-sm">
            <i class="bi bi-plus-circle"></i> Nuevo Ticket
        </a>
    </div>

    <br />

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text"
                   id="buscarNombre"
                   class="form-control"
                   placeholder="🔍 Buscar por Título..." />
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle" id="tablaTickets">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Título</th>
                        <th>Prioridad</th>
                        <th>Categoría</th>
                        <th>Estado</th>
                        <th>Fecha Registro</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.IdTicket</td>
                            <td>@item.Titulo</td>
                            <td>
                                <span class="badge bg-warning text-dark">
                                    @item.Prioridad
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @item.Categoria
                                </span>
                            </td>
                            <td>
                                @if (item.Estado == "Abierto")
                                {
                                    <span class="badge bg-success">Abierto</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Estado</span>
                                }
                            </td>
                            <td>@item.FechaCreacion.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.IdTicket"
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.IdTicket"
                                   class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            var table = $('#tablaTickets').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                responsive: true,
                pageLength: 10
            });

            $('#buscarNombre').on('keyup', function () {
                table.column(1).search(this.value).draw();
            });

        });
    </script>
}
