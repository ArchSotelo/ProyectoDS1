    ViewData["Title"] = "Details";
}

<h1>Detalles Usuarios</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.codigoUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.codigoUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombreUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombreUsuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.apellidoUsuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.apellidoUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.contrasena)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.contrasena)
        </dd>
        <dt class = "col-sm-2">
