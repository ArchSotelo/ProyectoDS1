<div>
    @Html.ActionLink("Editar Usuario", "Edit", new { id = Model.idUsuario }, new { @class = "btn btn-success" }) |
    <a asp-action="ListUsuario" class="btn btn-outline-primary">Retornar</a> |
    @Html.ActionLink("Eliminar", "Delete", new { id = Model.idUsuario }, new { @class = "btn btn-danger" })
</div>
