@model IEnumerable<ProyectoDS1.Models.Usuario>

@{
    ViewData["Title"] = "ListUsuario";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                Rol
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreRol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idUsuario }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Ver", "Details", new { id=item.idUsuario}, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Eliminar", "Delete", new {  id=item.idUsuario }, new { @class = "btn btn-danger" })
                </td>
        </tr>
}
    </tbody>
</table>

