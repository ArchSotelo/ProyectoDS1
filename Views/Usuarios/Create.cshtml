@model ProyectoDS1.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Nuevo Usuario</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="codigoUsuario" class="form-label"></label>
                    <input asp-for="codigoUsuario" class="form-control" />
                    <span asp-validation-for="codigoUsuario" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="idRol" class="form-label"></label>
                    <select asp-for="idRol" asp-items="@(ViewBag.rol)" class="form-select">
                        <option value="">-- Seleccione rol --</option>
                    </select>
                    <span asp-validation-for="idRol" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-md-6">
                    <label asp-for="nombreUsuario" class="form-label"></label>
                    <input asp-for="nombreUsuario" class="form-control" />
                    <span asp-validation-for="nombreUsuario" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="apellidoUsuario" class="form-label"></label>
                    <input asp-for="apellidoUsuario" class="form-control" />
                    <span asp-validation-for="apellidoUsuario" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-md-6">
                    <label asp-for="email" class="form-label"></label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="telefono" class="form-label"></label>
                    <input asp-for="telefono" class="form-control" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-md-6">
                    <label asp-for="contrasena" class="form-label"></label>
                    <input asp-for="contrasena" type="password" class="form-control" />
                    <span asp-validation-for="contrasena" class="text-danger"></span>
                </div>
              
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Crear
                </button>
                <a asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-trash"></i> Limpiar
                </a>
                <a asp-action="ListUsuario" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left-circle"></i> Retornar
                </a>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.mensaje))
        {
            <div class="alert alert-info mt-3">@ViewBag.mensaje</div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
